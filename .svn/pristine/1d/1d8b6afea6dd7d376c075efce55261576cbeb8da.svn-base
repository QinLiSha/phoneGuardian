<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/setting_item_entry"
    android:padding="10dp" >

    <CheckBox
        android:id="@+id/cb_file_show"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/check_crooct" />

    <ImageView
        android:id="@+id/iv_file_show"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/cb_file_show"/>

    <TextView
        android:id="@+id/tv_filename_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_file_show"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_file_show"
        android:singleLine="true"
        android:text="飞秋"
        android:textSize="14sp" />
    
      <TextView
        android:id="@+id/tv_filetime_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_file_show"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_file_show"
        android:text="内存:12.5M"
        android:textSize="14sp" />
      
      <TextView 
          android:id="@+id/tv_filesize_show"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/iv_file_show"
          android:layout_alignParentRight="true"
          android:text="系统进程"
          android:textColor="#FA5900"
          android:textSize="10sp"/>

</RelativeLayout>
